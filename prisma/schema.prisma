generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name             String
  email            String  @unique
  emailVerified    Boolean @default(false)
  image            String?
  age              Int?
  gender           String?
  profileCompleted Boolean @default(false)

  banned     Boolean   @default(false)
  banReason  String?
  banExpires DateTime?

  accounts Account[]
  sessions Session[]

  @@index([email])
  @@map("users")
}

model Session {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  expiresAt      DateTime
  token          String   @unique
  ipAddress      String?
  userAgent      String?
  impersonatedBy String?

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([token])
  @@index([userId])
  @@index([expiresAt])
  @@map("sessions")
}

model Account {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  accountId             String
  providerId            String
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([accountId, providerId])
  @@index([userId])
  @@map("accounts")
}

model Verification {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  identifier String
  value      String
  expiresAt  DateTime

  @@unique([identifier, value])
  @@index([expiresAt])
  @@map("verifications")
}

model Classroom {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name          String  @unique // e.g., "Class - 63"
  isLightOn     Boolean @default(false)
  arduinoPin    Int?    // Optional: Arduino pin number
  description   String?

  activityLogs ActivityLog[]

  @@map("classrooms")
}

model ActivityLog {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())

  action       String // "ON" or "OFF"
  classroomId  String
  classroom    Classroom @relation(fields: [classroomId], references: [id], onDelete: Cascade)
  
  userId       String?
  userName     String?
  
  @@index([classroomId])
  @@index([createdAt])
  @@map("activity_logs")
}
